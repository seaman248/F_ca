.packages
	gs('fluid')
	padding em(20) 0
	.package
		col(5.94)
		border-radius em(10)
		border 1px solid #dbdbdb
		color GREY
		text-transform uppercase
		text-align center
		margin-bottom em(20)
		h4
			line-height em(0)
			text-align center
			font-weight 300
			font-size em(30)
		h5::before
			content '$'
			font-size em(9)
			position relative
			font-weight 300
			top -0.7em
		h5
			background-color #f1f1f1
			color #6d6d6d
			font-weight 500
			text-align center
			font-size em(66)
			line-height em(25)
			margin 0
			padding 0
			.cent
				font-size em(9)
				font-weight 300
				top -0.7em
				position relative
		ul.features
			list-style-type none
			text-align center
			padding 0
			margin 0 8% 0
		li
			padding em(15) 0
			border-bottom 1px dashed #7c7c7c 
		button
			color #fff
			background-color RED
			border none
			text-align center
			margin em(10) 5% em(15)
			line-height em(40)
			padding 0 10% 0
			border-radius em(5)
			font-size em(18)
	.standart
		background-color BLUE
		color white
		h5
			background-color #2782a7
			color white
		li
			border-color white
+media-query( all, min-width 960px )
	.packages
		gs('fixed')
		.package
			col(2.96)