.subscribe::before
	content ''
	display block
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	right 0
	bottom 0
	background-color rgba(255,255,255,0.89)
	z-index -1
.subscribe
	padding em(40) em(10)
	background-image url(../img/subscribe-bg.jpg)
	background-repeat no-repeat
	position relative
	background-position top center
	z-index 0
	._container
		gs('fluid')
		position relative
		z-index 1
	form
		text-align center
		padding em(20) 0
	input, button
		margin 0 em(1)
		border-radius em(5)
	input
		padding em(15) em(10)
		border-color DARK_GREY
		background-color rgba(255, 255, 255, 0.4)
		border solid 1px
		font-weight 300
		width 30%
	button
		padding em(17) em(20)
		border none
		text-transform uppercase
		color white
		background-color RED
		transition background-color 0.18s ease-in 0.09s
	button:hover
		background-color red
	.social-buttons
		list-style none
		text-align center
		li
			display inline-block
			margin em(5)
		a
			display block
			width em(51)
			line-height em(51)
			background-color white
			color GREY
			border-radius 50%
			transition-property background-color color
			transition 0.18s ease-in 0.09s
		a:hover
			background-color #2e90b8
			color white